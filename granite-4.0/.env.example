# Granite 4.0 LLM Server Configuration

# Number of CPU threads to use (default: 96 for FlySQL26)
LLAMA_THREADS=96

# Context window size in tokens (Granite supports up to 128K)
# Larger = more memory usage but longer context
LLAMA_CONTEXT_SIZE=16384

# Server port
LLAMA_PORT=8081

# Server host (0.0.0.0 to accept external connections)
LLAMA_HOST=0.0.0.0
